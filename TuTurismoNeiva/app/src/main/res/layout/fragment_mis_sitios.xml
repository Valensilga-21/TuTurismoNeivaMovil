<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mis_sitios">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.206">

            <Button
                android:id="@+id/button8"
                android:layout_width="172.5dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#EFEEEE"
                android:text="Sitios turÃ­sticos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/cards"
                android:textColorLink="@color/cards"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button11"
                android:layout_width="172.5dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD260"
                android:text="Monumentos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/cards"
                android:textColorLink="@color/cards"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="345dp"
            android:layout_height="35dp"
            android:background="@drawable/barra_busqueda"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/barra_busqueda"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="?android:attr/actionModeWebSearchDrawable"
                app:iconTint="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Sitios"
                android:textColor="@color/cards"
                android:textColorLink="@color/cards"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:src="@drawable/heart_fill_svgrepo_com" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>