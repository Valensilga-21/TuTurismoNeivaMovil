<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".mis_sitios">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="199dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.056">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:background="@drawable/barra_busqueda"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/barra_busqueda"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF" />

                <Button
                    android:id="@+id/btnBuscar2"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="46dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:icon="?android:attr/actionModeWebSearchDrawable"
                    app:iconTint="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/misSitios"
                    android:textColor="@color/linkmain"
                    android:textColorLink="@color/linkmain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="26dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:src="@drawable/heart_fill_svgrepo_com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="365dp"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EFEEEE"
                    android:text="@string/sitios"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FF26282E"
                    android:textColorLink="@color/cards"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="172.5dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFD260"
                    android:text="@string/monumentos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FF26282E"
                    android:textColorLink="@color/cards"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>