<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="320dp"
            android:layout_height="490dp"
            android:backgroundTint="@color/cards"
            android:outlineSpotShadowColor="#5E5E5E"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Ingresa tus datos personales"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="115dp"
                android:text="Nombre completo"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="231dp"
                android:layout_height="25dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="140dp"
                android:background="#8FFFFFFF"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="175dp"
                android:text="Teléfono"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="231dp"
                android:layout_height="25dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="200dp"
                android:background="#8FFFFFFF"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="235dp"
                android:text="Correo"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="231dp"
                android:layout_height="25dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="260dp"
                android:background="#8FFFFFFF"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/lblContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="295dp"
                android:text="Contraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblConfirmContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="355dp"
                android:text="Confirmar contraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="420dp"
                android:backgroundTint="@color/naranja"
                android:text="Registrarme"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtContra"
                android:layout_width="231dp"
                android:layout_height="25dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="320dp"
                android:background="#8FFFFFFF"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtConfirmContra"
                android:layout_width="231dp"
                android:layout_height="25dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="380dp"
                android:background="#8FFFFFFF"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/ocultarContra"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="375dp"
                app:icon="@drawable/eye_slash_svgrepo_com"
                app:iconGravity="top" />

            <Button
                android:id="@+id/ocultarContra"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="313dp"
                app:icon="@drawable/eye_slash_svgrepo_com"
                app:iconGravity="top" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnVolverInicio2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="67dp"
            android:layout_height="53dp"
            app:icon="@drawable/arrow_left_circle_svgrepo_com"
            app:iconGravity="textStart"
            app:iconSize="35dp"
            app:iconTint="@color/naranja"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="336dp"
            android:layout_marginBottom="656dp"
            android:src="@drawable/circle_svgrepo_com__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_svgrepo_com__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.134" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_svgrepo_com__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.812"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.872" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="652dp"
            android:layout_marginEnd="332dp"
            android:src="@drawable/circle_svgrepo_com__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="380dp"
            android:src="@drawable/circle_thin_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.142" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle_thin_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.864" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>