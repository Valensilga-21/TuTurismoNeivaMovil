<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="@drawable/_0240806133254103"
    android:paddingTop="20dp"
    tools:context=".registrarse">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="798dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnVolverInicio2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="67dp"
            android:layout_height="53dp"
            app:icon="@drawable/arrow_left_circle_svgrepo_com"
            app:iconGravity="textStart"
            app:iconSize="35dp"
            app:iconTint="@color/naranja"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="320dp"
            android:layout_height="490dp"
            android:layout_marginTop="116dp"
            android:backgroundTint="@color/cards"
            android:foregroundGravity="center_vertical"
            android:outlineSpotShadowColor="#5E5E5E"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Ingresa tus datos personales"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="113dp"
                android:text="Nombre completo"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="138dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="173dp"
                android:text="Teléfono"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="198dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="233dp"
                android:text="Correo"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="258dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/lblContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="293dp"
                android:text="Contraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblConfirmContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="353dp"
                android:text="Confirmar contraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="420dp"
                android:backgroundTint="@color/naranja"
                android:text="Registrarme"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtContra"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="315dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <EditText
                android:id="@+id/txtConfirmContra"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="375dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF" />


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>