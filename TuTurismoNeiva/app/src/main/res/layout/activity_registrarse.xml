<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0240806133254103"
    tools:context=".registrarse">

    <androidx.cardview.widget.CardView
        android:layout_width="322dp"
        android:layout_height="500dp"
        android:backgroundTint="@color/cards"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561">

        <TextView
            android:id="@+id/textView"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="@string/ingresaDatosPer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="330dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="133dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="245dp"
                android:layout_height="30dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorNombre"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:text="errorNombre"
                android:textColor="#FF4B4B"
                android:textColorLink="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="245dp"
                android:layout_height="30dp"
                android:background="@drawable/plain_text"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="errorCorreo"
                android:textColor="#FF4B4B"
                android:textColorLink="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtContra"
                android:layout_width="245dp"
                android:layout_height="30dp"
                android:background="@drawable/plain_text"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="errorContra"
                android:textColor="#FF4B4B"
                android:textColorLink="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblConfirmContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmarContraseña"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtConfirmContra"
                android:layout_width="245dp"
                android:layout_height="30dp"
                android:background="@drawable/plain_text"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorConfirmContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="errorConfirmContra"
                android:textColor="#FF4B4B"
                android:textColorLink="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnRegistrar"
                style="@style/Widget.Material3.Button"
                android:layout_width="126dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/naranja"
                android:text="@string/registrase"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnVolverInicio2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="58dp"
        android:layout_height="49dp"
        app:icon="@drawable/arrow_left_circle_svgrepo_com"
        app:iconGravity="textStart"
        app:iconSize="35dp"
        app:iconTint="@color/naranja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

</androidx.constraintlayout.widget.ConstraintLayout>